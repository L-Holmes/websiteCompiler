    max-width:40vw; //take up no more than half of the width of the page
    height:auto; // height can grow if text gets too long.

    border: solid #404040 2px;
    border-radius:12px;

    // ON MOBILE
    @media screen and (max-width: 441px){
      max-width:90vw;
	}

